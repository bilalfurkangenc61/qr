@model qr.Models.ContactInfo
@{
    ViewData["Title"] = "vCard QR Generator";
}

<style>
    .qr-container {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        padding: 2rem 0;
    }

    .card-custom {
        border: none;
        border-radius: 20px;
        box-shadow: 0 15px 35px rgba(50, 50, 93, 0.1);
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
    }

    .card-header-custom {
        background: linear-gradient(135deg, #4f86f7 0%, #2c5aa0 100%);
        color: white;
        border-radius: 20px 20px 0 0 !important;
        padding: 1.5rem;
        border: none;
    }

    .btn-generate {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 25px;
        padding: 12px 30px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
    }

        .btn-generate:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
            background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
        }

    .form-control {
        border-radius: 10px;
        border: 2px solid #e3ebf0;
        padding: 12px 15px;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        }

    .form-select {
        border-radius: 10px;
        border: 2px solid #e3ebf0;
        padding: 12px 15px;
    }

    .qr-result {
        background: white;
        border-radius: 15px;
        padding: 2rem;
        text-align: center;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        margin-top: 2rem;
    }

    .qr-image {
        max-width: 300px;
        width: 100%;
        height: auto;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .content-preview {
        background: #f8f9fa;
        border-radius: 10px;
        padding: 1rem;
        margin-top: 1rem;
        font-family: 'Courier New', monospace;
        font-size: 0.9rem;
        white-space: pre-line;
    }

    .phone-info {
        font-size: 0.85rem;
        color: #666;
        margin-top: 5px;
    }
</style>

<div class="qr-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-6">
                <div class="card card-custom">
                    <div class="card-header card-header-custom text-center">
                        <h2 class="mb-0">

                            <a class="navbar-brand mx-auto" asp-area="" asp-controller="Qr" asp-action="Index" style="height: 60px;">
                                <img src="~/LOGO.png" alt="Ödeme Sistemi" style="height: 50px; width:150px;">
                            </a>
                          
                        </h2>
                       
                        <p class="mb-0 mt-2 opacity-55">Halk Elektronik Para ve Ödeme Hizmetleri QR Oluşturucu</p>
                    </div>

                    <div class="card-body p-4">
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger" role="alert">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                Lütfen formu doğru şekilde doldurunuz.
                            </div>
                        }

                        <form asp-controller="Qr" asp-action="Generate" method="post">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="FirstName" class="form-label fw-bold text-primary">
                                        <i class="fas fa-user me-1"></i> İsim *
                                    </label>
                                    <input asp-for="FirstName" class="form-control" placeholder="Adınızı girin" required />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="LastName" class="form-label fw-bold text-primary">
                                        <i class="fas fa-user me-1"></i> Soyisim *
                                    </label>
                                    <input asp-for="LastName" class="form-control" placeholder="Soyadınızı girin" required />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Title" class="form-label fw-bold text-primary">
                                        <i class="fas fa-id-badge me-1"></i> Ünvan
                                    </label>
                                    <input asp-for="Title" class="form-control" placeholder="Ünvanınızı girin" />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="Department" class="form-label fw-bold text-primary">
                                        <i class="fas fa-building me-1"></i> Müdürlük Adı
                                    </label>
                                    <input asp-for="Department" class="form-control" placeholder="Müdürlük adını girin" />
                                    <span asp-validation-for="Department" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="MobilePhone" class="form-label fw-bold text-primary">
                                        <i class="fas fa-mobile-alt me-1"></i> Cep Telefonu
                                    </label>
                                    <input asp-for="MobilePhone" class="form-control" placeholder="5xx xxx xxxx" type="tel" data-val="false" />
                                    <div class="phone-info">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Örnek: 532 123 4567
                                    </div>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="LandlinePhone" class="form-label fw-bold text-primary">
                                        <i class="fas fa-phone me-1"></i> Sabit Telefon
                                    </label>
                                    <input asp-for="LandlinePhone" class="form-control" placeholder="216 xxx xxxx" type="tel" data-val="false" />
                                    <div class="phone-info">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Örnek: 216 123 4567
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Email" class="form-label fw-bold text-primary">
                                        <i class="fas fa-envelope me-1"></i> E-posta
                                    </label>
                                    <input asp-for="Email" class="form-control" placeholder="ornek@email.com" type="email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="OutputType" class="form-label fw-bold text-primary">
                                        <i class="fas fa-image me-1"></i> Çıktı Formatı
                                    </label>
                                    <select asp-for="OutputType" class="form-select">
                                        <option value="PNG">PNG Resim</option>
                                        <option value="SVG">SVG Vektör</option>
                                    </select>
                                </div>
                            </div>

                            <div class="text-center mt-4">
                                <button type="submit" class="btn btn-primary btn-generate btn-lg">
                                    
                                    QR Kod Oluştur
                                </button>
                            </div>
                        </form>

                        @if (ViewBag.IsGenerated == true)
                        {
                            <div class="qr-result">
                                <h4 class="text-primary mb-3">
                                    <i class="fas fa-check-circle me-2"></i>
                                    vCard QR Kodu Başarıyla Oluşturuldu!
                                </h4>

                                <div class="row">
                                    <div class="col-md-6">
                                        <img src="@ViewBag.QrImageData" alt="vCard QR Code" class="qr-image" />
                                        <div class="mt-3">
                                            <a href="@ViewBag.QrImageData" download="vcard-qr.png" class="btn btn-outline-primary">
                                                <i class="fas fa-download me-1"></i> İndir
                                            </a>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <h6 class="text-muted mb-2">vCard İçeriği:</h6>
                                        <div class="content-preview">@ViewBag.GeneratedContent</div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}