@model qr.Models.ContactInfo

@{
    ViewData["Title"] = "vCard QR Generator";
    string[] deptLines = Array.Empty<string>();

    if (!string.IsNullOrWhiteSpace(Model?.Department))
    {
        var words = Model.Department.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (words.Length <= 3)
        {
            deptLines = words;
        }
        else
        {
            int chunk = (int)Math.Ceiling(words.Length / 3.0);
            var line1 = string.Join(' ', words.Take(chunk));
            var line2 = string.Join(' ', words.Skip(chunk).Take(chunk));
            var line3 = string.Join(' ', words.Skip(2 * chunk));
            deptLines = new[] { line1, line2, line3 }.Where(s => !string.IsNullOrWhiteSpace(s)).ToArray();
        }
    }
}


